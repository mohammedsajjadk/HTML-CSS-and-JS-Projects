{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "Sajjad's Boilerplate project for HTML, CSS and JS projects",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass src/sass/style.scss public/css/style.css -w",
    "dev-server": "webpack-dev-server --mode development --open",
    "start": "npm-run-all --parallel dev-server watch:sass",
    "build": "webpack --mode production",
    "compile:sass": "node-sass src/sass/style.scss public/css/style.comp.css",
    "concat:css": "concat -o public/css/style.concat.css public/css/icon-font.css public/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" public/css/style.concat.css -o public/css/style.prefix.css",
    "compress:css": "node-sass public/css/style.prefix.css public/css/style.css --output-style compressed",
    "production": "npm-run-all build compile:sass concat:css prefix:css compress:css"
  },
  "author": "Sajjad",
  "license": "MS",
  "devDependencies": {
    "autoprefixer": "<10.0.0",
    "axios": "^0.20.0",
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "concat": "^1.0.3",
    "fractional": "^1.0.0",
    "html-webpack-plugin": "^4.5.0",
    "live-server": "^1.2.1",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.2",
    "uniqid": "^5.2.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
